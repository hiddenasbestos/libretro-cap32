DEPS = $(CORE_DIR)/utils

INCFLAGS := \
	-I$(CORE_DIR) \
	-I$(CORE_DIR)/cap32 \
	-I$(CORE_DIR)/cap32/libcpccat \
	-I$(CORE_DIR)/libretro  \
    -I$(DEPS)/zlib

SOURCES_C := \
				 $(CORE_DIR)/libretro/libretro-core.c

